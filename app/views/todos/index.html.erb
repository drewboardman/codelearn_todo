<title>Shared Todo App </title>
<div class="container">
	<h1>Shared Todo App</h1>

	<div class="row">
		<div class="col-lg-8">
			<h4>All your todos here</h4>
				<ul class="list-group">
					<% @todos.each do |t| %>
					<li class="list-group-item"> <span class="badge">Incomplete</span> <%= t.todo_item %> </li>
					<% end %>
				</ul>
		</div>
		<div class="col-lg-4">
		<p>
		<%= link_to 'Create a new task', new_todo_path %>
		</p>
		</div>
	</div>
	</div>
</div>